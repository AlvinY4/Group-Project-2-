<div class="container-fluid d-flex justify-content-center">
    <div class="m-4 d-flex flex-column align-items-center wine-view">
      <div class="d-flex justify-content-center">
        <a href="/dashboard" class="back-to-dash"> &larr; Back to dashboard</a>
      </div>
    
      <div class="card">
        <div class="card-body" data-aos="zoom-in-up">
          <form class="edit-wine-form d-flex flex-column align-items-center justify-content-center">
            <div class="row d-flex align-items-center">
              <div class="title d-flex justify-content-center">
                <p>{{post.wine_name}}</p>
              </div>
              <div class="wine-data col d-flex justify-content-center">
                <p>{{post.wine-type}}</p>
                <p>{{post.wine_vintage}}</p>
              </div>
              <div class="d-flex justify-content-center">
                <p>{{post.wine_source}}</p>               
              </div>
              <div class="d-flex justify-content-center">
                 <input type="text" class="pt-2 m-2 " id="wine-notes" name="wine-notes" placeholder="{{post.wine_notes}}"/>
              </div>
              <div class="d-flex justify-content-center">
                 <input type="text" class="pt-2 m-2 mb-4" id="wine-count" name="wine-count" placeholder="{{post.wine_count}}"/>
              </div>
            </div>
            <div class="row d-flex justify-content-center">
              <div class="col">
                <button type="submit" >Save</button>
              </div>
              <div class="col">
                <button type="button" class="delete-post-btn">Delete Wine</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
</div>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>