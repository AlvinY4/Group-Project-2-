<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 form">
            <form class="new-wine-form">
                <h3>Add New Wine:</h3>
                <div class="pt-1">
                    <label for="wine-name">Wine Name:</label>
                    <input type="text" id="wine-name" name="wine-name"/>
                </div>
                <div class="pt-3">
                    <label for="type-select">Type of Wine:</label>
                    <select name="wine-type" id="wine-type">
                        <option value="">--Please choose an option--</option>
                        <option value="red">Red</option>
                        <option value="white">White</option>
                        <option value="rose">Rose</option>
                        <option value="sparkling">Sparkling</option>
                    </select>
                </div>
                <div class="pt-3">
                    <label for="vintage">Vintage:</label>
                    <input type="text" id="wine-vintage" name="wine-vintage"/>
                </div>
                <div class="pt-3">
                    <label for="source">Source:</label>
                    <input type="text" id="wine-source" name="wine-source"/>
                </div>
