<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 form">
            <form class="new-wine-form">
                <h3>Add New Wine:</h3>
                <div class="pt-1">
                    <label for="wine-name">Wine Name:</label>
                    <input type="text" id="wine-name" name="wine-name"/>
                </div>
                <div class="pt-3">
                    <label for="type-select">Type of Wine:</label>
                    <select name="wine-type" id="wine-type">
                        <option value="">--Please choose an option--</option>
                        <option value="Red">Red</option>
                        <option value="White">White</option>
                        <option value="Rose">Rose</option>
                        <option value="Sparkling">Sparkling</option>
                    </select>
                </div>
                <div class="pt-3">
                    <label for="vintage">Vintage:</label>
                    <input type="text" id="wine-vintage" name="wine-vintage"/>
                </div>
                <div class="pt-3">
                    <label for="source">Source:</label>
                    <input type="text" id="wine-source" name="wine-source"/>
                </div>
                <div class="pt-3">
                    <label for="notes">Notes:</label>
                    <input type="text" id="wine-notes" name="wine-notes"/>
                </div>
               <div class="pt-3">
                    <label for="wine-count">Quantity:</label>
                    <input type="text" id="wine-count" />
                </div>
                
                {{!-- <div class="pt-3">
                    <label for="myimage">Upload Image:</label>
                    <input type="file" id="myimage" name="myimage">
                </div> --}}
                <br>
                <div class="pt-1">
                    <button type="submit">Add Wine</button>
                </div>
                <div class="push"></div>
            </form>
        </div>
        <div class="col wine-cards">
            {{#if posts.length}}
            
            <div class="row gx-5 d-flex flex-wrap">
                {{#each posts as |post|}}
                <div data-aos="flip-left" class="col-lg-6 d-flex justify-content-center">
                    {{> post-info post}}
                </div>
                {{/each}}
            </div>
            
            {{/if}}
        </div>
    </div>
</div>

<script src="/javascript/add-post.js"></script>
