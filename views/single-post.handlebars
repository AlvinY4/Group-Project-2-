<div class="container-fluid d-flex justify-content-center">
    <div class="m-4 d-flex flex-column align-items-center wine-view">
        <div class= "d-flex justify-content-center>">
            <a href="/dashboard" class="back-to-dash"> &larr; Back to dashboard</a>
        </div>
        <div class="card mb-4 p-2" id="new-wine" data-aos="zoom-out-right">
   
            <div class="wine-name p-3">
                <a href="/dashboard"> <h4 class="card-title title">{{post.wine_name}}</h4></a> 
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="wine-data col">
                        <div class="wine-info">
                            <p class="card-text">{{post.wine_type}}</p>
                            <p class="card-text">{{post.wine_vintage}}</p>
                            <p class="card-text">{{post.wine_source}}</p>
                        </div>
                        
                    </div>
                    <div class="wine-notes col me-2 d-flex justify-content-center align-items-center">
                            <p class="card-text mx-2">{{post.wine_notes}}</p>
                    </div>
                </div>
                <div class="meta d-flex flex-row justify-content-between">
                    <div d-flex flex-column>
                        <p>{{post.wine_count}} {{format_plural "bottle" post.wine_count}}</p>
                    </div>
                    <a href="/dashboard/edit/{{post.id}}" class="edit-link">
                        <h3>Edit wine</h3>
                    </a>
                </div>
                
            </div>
        </div>
    </div>
</div>

<script src="/javascript/wine-count.js"></script>